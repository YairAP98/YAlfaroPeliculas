<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PL</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PL.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="https://img.freepik.com/vector-premium/logo-cine_23-2147503279.jpg" width="7%" style="border-radius=15px" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Pelicula" asp-action="GetAll">Populares</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Pelicula" asp-action="GetFavorite">Favoritos</a>
                        </li></li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="CinesController1" asp-action="GetAll">Cines</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="EstadisticaController1" asp-action="GetAll">Estadistica</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="DulcesController1" asp-action="GetAll">Dulceria</a>
                        </li> 
                        @if (Context.Session.GetString("Carrito") == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-secondary" asp-area="" asp-controller="VentaController1" asp-action="Carrito"><i class="bi bi-bag-heart-fill " style="color: #4C9BFF;"></i>Carrito()</a>
                            </li>
                        }
                        else
                        {
                            var ventaSession = Newtonsoft.Json.JsonConvert.DeserializeObject<List<object>>(Context.Session.GetString("Carrito"));
                            <li class="nav-item">
                                <a class="nav-link text-secondary" style="color: green;" asp-area="" asp-controller="VentaController1" asp-action="Carrito"><i class="bi bi-bag-heart-fill " style="color: #4C9BFF;"></i>(Carrito @ventaSession.Count)</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br />
    <br />
    <br />
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - PL - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
